<resources xmlns:tool="http://schemas.android.com/tools" xmlns:tools="urn:oasis:names:tc:xliff:document:1.2">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorBlack</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="android:windowBackground">@color/colorWhite</item>
    </style>

    <style name="Button" parent="Base.Widget.AppCompat.Button">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ripple_selector_buttons</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="FragmentCustomStyle" parent="Theme.AppCompat">

        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginBottom">30dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="CheckBoxCustomTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:textColor">@color/textColorGray2</item>
    </style>

    <style name="EditTextCustom" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="android:colorForeground">@color/textColorGray2</item>
        <item name="android:textColor">@color/textColorGray2</item>
        <item name="colorAccent">@color/textColorGray2</item>
        <item name="colorControlNormal">@color/textColorGray2</item>
        <item name="colorControlActivated">@color/textColorGray2</item>
    </style>

    <style name="ViewRisk" parent="Theme.AppCompat">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">8dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ImageViewArrowRisk" parent="Theme.AppCompat">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:tint">@color/textColorGray2</item>
    </style>

    <style name="TextViewMoreInfoLabels" parent="Theme.AppCompat">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:textColor">@color/textColorGray2</item>
        <item name="android:fontFamily">@font/din_pro_light</item>
    </style>

    <style name="TextViewMoreInfoValues" parent="Theme.AppCompat">

        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:gravity">right|bottom</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/din_mittel_schrift_std</item>
    </style>

    <style name="TextViewWhatIsDegreeMoreInfo" parent="Theme.AppCompat">

        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/din_pro_medium</item>
        <item name="android:textColor">@color/colorBlackPercent90</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
