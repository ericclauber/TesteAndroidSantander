<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageViewArrowRisk1"
            style="@style/ImageViewArrowRisk"
            android:src="@drawable/baseline_keyboard_arrow_down_black_24" />

        <ImageView
            android:id="@+id/imageViewArrowRisk2"
            style="@style/ImageViewArrowRisk" />

        <ImageView
            android:id="@+id/imageViewArrowRisk3"
            style="@style/ImageViewArrowRisk"/>

        <ImageView
            android:id="@+id/imageViewArrowRisk4"
            style="@style/ImageViewArrowRisk"/>

        <ImageView
            android:id="@+id/imageViewArrowRisk5"
            style="@style/ImageViewArrowRisk" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutRiskView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:id="@+id/viewRisk1"
            style="@style/ViewRisk"
            android:background="@drawable/background_risk_1" />

        <View
            android:id="@+id/viewRisk2"
            style="@style/ViewRisk"
            android:background="@drawable/background_risk_2" />

        <View
            android:id="@+id/viewRisk3"
            style="@style/ViewRisk"
            android:background="@drawable/background_risk_3" />

        <View
            android:id="@+id/viewRisk4"
            style="@style/ViewRisk"
            android:background="@drawable/background_risk_4" />

        <View
            android:id="@+id/viewRisk5"
            style="@style/ViewRisk"
            android:background="@drawable/background_risk_5" />
    </LinearLayout>

</LinearLayout>
